{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "paths": {
      "@openpro-api-react/*": ["./openpro-api-react/src/*"]
    }
  },
  "include": ["src/**/*", "openpro-api-react/src/client/**/*"],
  "exclude": [
    "node_modules", 
    "dist", 
    "openpro-api-react/node_modules",
    "openpro-api-react/src/playground/**/*",
    "openpro-api-react/**/__tests__/**/*"
  ]
}

